    "express": "^4.16.3",
    "node.jwt": "^0.1.5",
    "popper.js": "^1.14.3",
    "semantic-ui-css": "^2.3.3",
    "semantic-ui-vue": "^0.2.11",
    "vue": "^2.5.16",
    "vue-router": "^3.0.1",
    "vue-sweetalert2": "^1.5.2",
    "vue-timeago": "^5.0.0",
    "vue-toasted": "^1.1.24",
